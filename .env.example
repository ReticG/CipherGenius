# LLM API Configuration
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ZHIPUAI_API_KEY=your_zhipuai_api_key_here

# LLM Model Selection
DEFAULT_LLM_PROVIDER=openai  # openai, anthropic, zhipuai, or glm
OPENAI_MODEL=gpt-4-turbo-preview
ANTHROPIC_MODEL=claude-3-opus-20240229
ZHIPUAI_MODEL=glm-4  # glm-4, glm-4-plus, glm-3-turbo

# Embedding Model
EMBEDDING_MODEL=text-embedding-3-large

# Vector Database (Qdrant)
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=crypto_knowledge

# PostgreSQL Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/ciphergenius

# Redis Cache
REDIS_URL=redis://localhost:6379/0

# Application Settings
DEBUG=true
LOG_LEVEL=INFO
API_HOST=0.0.0.0
API_PORT=8000

# Generation Settings
MAX_SCHEME_VARIANTS=5
DEFAULT_TIMEOUT=60
ENABLE_CACHING=true

# Security
API_KEY_ENABLED=false
API_KEY=your_secret_api_key
